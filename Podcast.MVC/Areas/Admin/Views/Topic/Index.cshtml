
@model List<TopicViewModel>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <a class="btn btn-info btn-lg" asp-action="create">Create</a>
            </h4>
            <h4 class="card-title">Topics</h4>

            <table class="table">
                <thead>
                    <tr>
                        <th>Cover</th>
                        <th>Name</th>
                        <th>Episodes</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var episode in Model)
                    {
                        <tr>
                            <td><img src="~/images/topics/@episode.CoverUrl"/></td>
                            <td>@episode.Name</td>
                            <td>@episode.Episodes?.Count</td>
                            <td>
                                @* <a class="btn btn-info btn-sm" asp-action="details" asp-route-id="@product.Id">Details</a> *@
                                <a class="btn btn-warning btn-sm" asp-action="update" asp-route-id="@episode.Id">Update</a>
                                <a class="btn btn-danger btn-sm" asp-action="delete" asp-route-id="@episode.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>